{% extends 'base.html.twig' %}

{% block title %}Ordonnance index{% endblock %}

{% block body %}
    <h1>Ordonnance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>Title</th>
                <th>Medicament</th>
                <th>Quantite</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ordonnance in ordonnances %}
            <tr>
                <td>{{ ordonnance.id }}</td>
                <td>{{ ordonnance.createdAt ? ordonnance.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ordonnance.title }}</td>
                <td>{{ ordonnance.medicament }}</td>
                <td>{{ ordonnance.quantite }}</td>
                <td>{{ ordonnance.debut ? ordonnance.debut|date('Y-m-d') : '' }}</td>
                <td>{{ ordonnance.fin ? ordonnance.fin|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_ordonnance_show', {'id': ordonnance.id}) }}">show</a>
                    <a href="{{ path('app_ordonnance_edit', {'id': ordonnance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ordonnance_new') }}">Create new</a>
{% endblock %}
