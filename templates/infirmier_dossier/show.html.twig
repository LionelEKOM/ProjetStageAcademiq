{% extends 'base.html.twig' %}

{% block title %}Dossier{% endblock %}

{% block body %}
<div class="wrapper">
    {# {% include '_partials/asidebarInf.html.twig' %} #}
    <div class="main">
        {# {% include '_partials/_navbar.html.twig' %} #}
        <div class="container">
            {# <h1 class="text-center"> Détails Dossier</h1> #}
                
                <div class="row mt-3">
					<div class="col-9">
						<h1 class="">
							DOSSIER MEDICAL</h1>
					</div>
				</div>
				<hr class="border border-success border-2 opacity-50">
				<div class="text-center">
					<h1>{{ dossier.clinique }}</h1>
					<hr class="border border-success border-2 opacity-50">
				</div>
				<div class="row">
					<div class="col-5 me-4 border border-primary-subtle">
						<h1>
							{% if dossier.sexe == 'Homme' %}
								Monsieur
							{% else %}
								Madame
							{% endif %}
							{{ dossier.firstname }}
							{{ dossier.lastname }}
							agé(e) de
							{{ dossier.age }}
							ans.
						</h1>
						<p>
							<strong>Adresse:</strong>
							{{ dossier.adresse }}</p>
						<p>
							<strong>Email:
							</strong>
							{{ dossier.email }}</p>
						<p>
							<strong>Profession:
							</strong>
							{{ dossier.profession }}</p>
						<p>
							<strong>Taille:
							</strong>
							{{ dossier.taille }}
							m</p>
						<p>
							<strong>Poids:
							</strong>
							{{ dossier.poids }}
							kg</p>
						<i>
							<small>
								<p>crée le
									{{ dossier.createdAt ? dossier.createdAt|date('d-m-Y')}}
									par
									{{ dossier.users}}
									{{ dossier.users.title }}</p>
							</small>
						</i>
					</div>
            {# <a href="{{ path('app_infirmier_dossier_edit', {'id': dossier.id}) }}">edit</a>

            {{ include('infirmier_dossier/_delete_form.html.twig') }} #}

        </div>
        <a class="btn btn-warning mt-3" href="{{ path('app_infirmier_dossier_index')}}">
                <i class="fa-solid fa-rotate-left"></i>
                Retour
        </a>
    </div>
</div>
    
{% endblock %}
