{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}
    <div class="wrapper">
        {% include '_partials/asidebarInf.html.twig' %}
        <div class="main">
            {% include '_partials/_navbar.html.twig' %}
            <div class="container">

                {% for type, messages in app.flashes() %}
						<div class="">
							{% for message in messages %}
								<div class=" text-center alert alert-{{ type }}" role="alert">
									{{ message }}
								</div>
							{% endfor %}
						</div>
				{% endfor %}

                <h1 class="text-center">Consultation index</h1>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            {# <th>Id</th> #}
                            <b><th>Nom du Patient</th></b>
                            <b><th>Date</th></b>
                            <b><th>Motif</th></b>
                            <b><th>MÃ©decin Traitant</th></b>
                            {# <b><th>actions</th></b> #}
                        </tr>
                    </thead>
                    <tbody>
                        {% for consultation in consultations %}
                            <tr>
                                {# <td>{{ consultation.id }}</td> #}
                                <td>{{ consultation.dossier.fullname }}</td>
                                <td>{{ consultation.createdAt ? consultation.createdAt|date('d-m-Y')}}</td>
                                <td>{{ consultation.motif }}</td>
                                <td>{{ consultation.traitant }}</td>
                                {# <td>
                                    <a href="{{ path('app_infirmier_consultation_show', {'id': consultation.id}) }}">show</a>
                                    <a href="{{ path('app_infirmier_consultation_edit', {'id': consultation.id}) }}">edit</a>
                                </td> #}
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a class="btn btn-success" href="{{ path('app_infirmier_consultation_new') }}">
                    <i class="fa-solid fa-file-medical"></i>
                    Nouveau
                </a>
                <a class="btn btn-warning" href="{{ path('app_infirmier')}}">
                    <i class="fa-solid fa-rotate-left"></i>
                        Retour
                </a>

                {# <a href="{{ path('app_infirmier_consultation_new') }}">Create new</a> #}

            </div>
        </div>
    </div>
{% endblock %}
