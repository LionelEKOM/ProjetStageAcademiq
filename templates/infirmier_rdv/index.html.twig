{% extends 'base.html.twig' %}

{% block title %}Rdv index
{% endblock %}

{% block body %}
	<div class="wrapper">
		{% include '_partials/asidebarInf.html.twig' %}
		<div class="main">
			{% include '_partials/_navbar.html.twig' %}
			<div class="container">
				<h1 class="text-center">Rendez-vous du jour</h1>

				<table class="table">
					<thead>

						<tr>
							{# <th>Id</th> #}
							<th style="width: 40%">Nom du patient</th>
							<th>Date</th>
							<th>Motif</th>
							{# <th>actions</th> #}
						</tr>
					</thead>
					<tbody>

						{% for rdv in rdvs %}
							<tr>
								{# <td>{{ rdv.id }}</td> #}
								<td>{{ rdv.dossier.firstname }}</td>
								{# Accès au nom du patient via le dossier lié au rendez-vous #}
								<td>{{ rdv.date ? rdv.date|date('Y-m-d') : '' }}</td>
								<td>{{ rdv.motif }}</td>
								<td>
									{# <a href="{{ path('app_infirmier_rdv_show', {'id': rdv.id}) }}">show</a>
									                    <a href="{{ path('app_infirmier_rdv_edit', {'id': rdv.id}) }}">edit</a> #}
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="4">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<div class="col" style="margin-left: 30px;">
				<a class="btn btn-warning" href="{{ path('app_infirmier') }}">
			<i class="fa-solid fa-rotate-left"></i>
			Retour
		</a>
			</div>
		</div>
	</div>

	{# <a href="{{ path('app_infirmier_rdv_new') }}">Create new</a> #}
{% endblock %}

