{% extends 'base.html.twig' %}

{% block title %}Antecedent index{% endblock %}

{% block body %}
<div class="wrapper">
    {% include '_partials/asidebar.html.twig' %}
    <div class="main">
        {% include '_partials/_navbar.html.twig' %}
        <div class="container">
            <h1>Historique Antecedents</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for antecedent in antecedents %}
            <tr>
                <td>{{ antecedent.id }}</td>
                <td>{{ antecedent.type }}</td>
                <td>{{ antecedent.description }}</td>
                <td>{{ antecedent.createdAt ? antecedent.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_antecedent_show', {'id': antecedent.id}) }}">show</a>
                    <a href="{{ path('app_admin_antecedent_edit', {'id': antecedent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_antecedent_new') }}">Create new</a>
        </div>
    </div>
</div>
{% endblock %}
