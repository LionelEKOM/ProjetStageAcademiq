{% extends 'base.html.twig' %}

{% block title %}Dossier index{% endblock %}

{% block body %}
    <div class="wrapper">
        {% include '_partials/asidebar.html.twig' %}
        <div class="main">
            {% include '_partials/_navbar.html.twig' %}
            <div class="container">
                {% for type, messages in app.flashes() %}
						<div class="">
							{% for message in messages %}
								<div class=" text-center alert alert-{{ type }}" role="alert">
									{{ message }}
								</div>
							{% endfor %}
						</div>
					{% endfor %}

                    <div class="row mt-3">
                        <div class="col-9">
                            <h1>Historique Dossiers</h1>
                        </div>
                        <div class="col-3 text-end">
                            <a class="btn btn-success mt-2" href="{{ path('app_infirmier_consultation_new') }}">
                            <i class="fa-solid fa-user-plus"></i>
                            Nouv. Dossier</a>
                        </div>
                    </div>
                <hr class="border border-primary border-2 opacity-50">   

    <table class="table table-striped">
        <thead>
            <tr>
                {# <th>Id</th> #}
                {# <th>Clinique</th> #}
                <th>Prénom</th>
                <th>Nom</th>
                <th>Age</th>
                <th>Sexe</th>
                <th>E-mail</th>
                {# <th>Adresse</th> #}
                {# <th>Téléphone</th> #}
                {# <th>Profession</th> #}
                <th>Taille</th>
                <th>Poids</th>
                <th>Date création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dossier in dossiers %}
            <tr>
                {# <td>{{ dossier.id }}</td> #}
                {# <td>{{ dossier.clinique }}</td> #}
                <td>{{ dossier.firstname }}</td>
                <td>{{ dossier.lastname }}</td>
                <td>{{ dossier.age }} ans</td>
                <td>{{ dossier.sexe }}</td>
                <td>{{ dossier.email }}</td>
                {# <td>{{ dossier.adresse }}</td> #}
                {# <td>{{ dossier.phone }}</td> #}
                {# <td>{{ dossier.profession }}</td> #}
                <td>{{ dossier.taille }} cm</td>
                <td>{{ dossier.poids }} kg</td>
                <td>{{ dossier.createdAt ? dossier.createdAt|date('Y-m-d')}}</td>
                <td>
                    <a href="{{ path('app_admin_dossier_show', {'id': dossier.id}) }}">show</a>
                    <a href="{{ path('app_admin_dossier_edit', {'id': dossier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
        </div>
    </div>
{% endblock %}
