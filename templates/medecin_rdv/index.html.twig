{% extends 'base.html.twig' %}

{% block title %}Rdv index{% endblock %}

{% block body %}
    <div class="wrapper">
        {% include '_partials/asidebarmed.html.twig' %}
        <div class="main">
            {% include '_partials/_navbar.html.twig' %}
            <div class="container">
                <h1 class="text-center">Historique des Rendez-vous</h1>

        <table class="table">
            <thead>
                <tr>
                    {# <th>Id</th> #}
                    <th style="width: 35%">Nom du patient</th>
                    <th>Date</th>
                    <th>Motif</th>
                    {# <th>actions</th> #}
                </tr>
            </thead>
            <tbody>
                {% for rdv in rdvs %}
                    <tr>
                        {# <td>{{ rdv.id }}</td> #}
                        <td>{{ rdv.dossier.fullname }}</td>
                        <td>{{ rdv.date ? rdv.date|date('d-m-Y') : '' }}</td>
                        <td>{{ rdv.motif }}</td>
                        {# <td>
                            <a href="{{ path('app_medecin_rdv_show', {'id': rdv.id}) }}">show</a>
                            <a href="{{ path('app_medecin_rdv_edit', {'id': rdv.id}) }}">edit</a>
                        </td> #}
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

            <div class="col mx-auto w-50">
                <div class="d-grid gap-2">
                    <a class="btn btn-success mt-2" href="{{ path('app_medecin_rdv_new') }}">
                        <i class="fa-solid fa-check"></i>
                        Ajouter
                    </a>
                </div>
                <div class="d-grid gap-2">
                    <a class="btn btn-warning mt-2" href="{{ path('app_medecin_dossier_index') }}">
                        <i class="fa-solid fa-rotate-left"></i>
                        Retour
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
