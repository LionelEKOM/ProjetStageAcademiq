{% extends 'base.html.twig' %}

{% block title %}Dossier
{% endblock %}

{% block body %}
	<div class="wrapper">
		<div class="main">
			{% include '_partials/_navbar.html.twig' %}
			<div class="container">
				{% for type, messages in app.flashes() %}
					<div class="">
						{% for message in messages %}
							<div class=" text-center alert alert-{{ type }}" role="alert">
								{{ message }}
							</div>
						{% endfor %}
					</div>
				{% endfor %}
				<div class="row mt-3">
					<div class="col-9">
						<h1 class="mt-3">
							DOSSIER MEDICAL</h1>
					</div>
				</div>
				<hr class="border border-success border-2 opacity-50">
				<div class="text-center">
					<h1>{{ dossier.clinique }}</h1>
					<hr class="border border-success border-2 opacity-50">
				</div>
				<div class="row">
					<div class="col-5 me-4 border border-primary-subtle">
						<h1>
							{% if dossier.sexe == 'Homme' %}
								Monsieur
							{% else %}
								Madame
							{% endif %}
							{{ dossier.firstname }}
							{{ dossier.lastname }}
							agé(e) de
							{{ dossier.age }}
							ans.
						</h1>
						<p>
							<strong>Adresse:</strong>
							{{ dossier.adresse }}</p>
						<p>
							<strong>Email:
							</strong>
							{{ dossier.email }}</p>
						<p>
							<strong>Profession:
							</strong>
							{{ dossier.profession }}</p>
						<p>
							<strong>Taille:
							</strong>
							{{ dossier.taille }}
							metre</p>
						<p>
							<strong>Poids:
							</strong>
							{{ dossier.poids }}
							kg</p>
						<i>
							<small>
								<p>crée le
									{{ dossier.createdAt ? dossier.createdAt|date('Y-m-d')}}
									par
									{{ dossier.users}}
									{{dossier.users.title }}</p>
							</small>
						</i>
					</div>

					<div class="col-6">
						<div class="row mt-3">
							<div class="col-9">
								<h2>Historique Consultations</h2>
							</div>
							<div
								class="col-2 mt-1 text-end">
								{# <a class="btn btn-success mt-2" href="{{ path('app_admin_dossier_new') }}">
																                            <i class="fa-solid fa-user-plus"></i>
																                            Nouv. Dossier</a> #}
								<div class="dropdown">
									<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></button>
									<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
										<li>
											<a class="dropdown-item" href="{{ path('app_infirmier_consultation_new', {'id':dossier.id})}}">Ajouter</a>
										</li>
										<li>
											<a class="dropdown-item" href="#">Editer</a>
										</li>
										<li>
											<a class="dropdown-item" href="#">Supprimer</a>
										</li>
									</ul>
								</div>
							</div>
						</div>

						<hr class="border border-primary border-1 opacity-75">

						<table class="table table-striped">
							<thead>
								<tr>
									{# <th>Id</th> #}
									<th>Date</th>
									<th>Motif</th>
									<th>Médécin(s) traitant</th>
								</tr>
							</thead>
							<tbody>
								{% for consultation in consultations %}
									<tr>
										{# <td>{{ consultation.id }}</td> #}
										<td>{{ consultation.createdAt ? consultation.createdAt|date('Y-m-d') }}</td>
										<td>{{ consultation.motif }}</td>
										<td>
											Dr.
											<b>{{ consultation.traitant }}</b>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="5">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<div class="row">
							<div class="col-9">
								<h2 class="mt-4">Historique Antecedents</h2>
							</div>
							<div
								class="col-2 mt-3 px-1 text-end">
								<div class="dropdown">
									<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></button>
									<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
										<li>
											<a class="dropdown-item" href="{{ path('app_ordonnance_new', {'id': dossier.id})}}">Ajouter</a>
										</li>
									</ul>
								</div>
							</div>
						</div>						
						<hr class="border border-info border-2 opacity-50">
						<table class="table table-striped">
							<thead>
								<tr>
									{# <th>Id</th> #}
									<th>Type</th>
									<th>Description</th>
									<th>Date</th>
									{# <th>actions</th> #}
								</tr>
							</thead>
							<tbody>
								{% for antecedent in antecedents %}
									<tr>
										{# <td>{{ antecedent.id }}</td> #}
										<td>{{ antecedent.type }}</td>
										<td>{{ antecedent.description }}</td>
										<td>{{ antecedent.createdAt ? antecedent.createdAt|date('Y-m-d')}}</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="5">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
					<div class="col">

						<div class="row mt-2">
							<div class="col-9">
								<h2>Historique Ordonances</h2>
							</div>
							<div class="col-2 mt-1 px-1 text-end">
								<div class="dropdown">
									<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></button>
									<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
										<li>
											<a class="dropdown-item" href="{{ path('app_ordonnance_new', {'id': dossier.id})}}">Ajouter</a>
										</li>
									</ul>
								</div>
							</div>
						</div>
						<hr class="border border-success border-2 opacity-50">
						<div id="scrollContainer">
							<table class="table table-striped">
								<thead>
									<tr>
										{# <th>Id</th> #}
										<th>Date</th>
										<th>Titre</th>
										<th>Medicament</th>
										<th>Quantite</th>
										<th>Debut</th>
										<th>Fin</th>
										{# <th>actions</th> #}
									</tr>
								</thead>
								<tbody>
									{% for ordonnance in ordonnances %}
										<tr>
											{# <td>{{ ordonnance.id }}</td> #}
											<td>{{ ordonnance.createdAt ? ordonnance.createdAt|date('Y-m-d')}}</td>
											<td>{{ ordonnance.title }}</td>
											<td>{{ ordonnance.medicament }}</td>
											<td>{{ ordonnance.quantite }}</td>
											<td>{{ ordonnance.debut ? ordonnance.debut|date('Y-m-d') : '' }}</td>
											<td>{{ ordonnance.fin ? ordonnance.fin|date('Y-m-d') : '' }}</td>
											{# <td>
																																	<a href="{{ path('app_ordonnance_show', {'id': ordonnance.id}) }}">show</a>
																																	<a href="{{ path('app_ordonnance_edit', {'id': ordonnance.id}) }}">edit</a>
																																</td> #}
										</tr>
									{% else %}
										<tr>
											<td colspan="8">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<div class="row">
							<div class="col-9">
								<h2 class="mt-4">Examens</h2>
							</div>
							<div class="col-2 mt-3 px-1 text-end">
								<div class="dropdown">
									<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></button>
									<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
										<li>
											<a class="dropdown-item" href="{{ path('app_ordonnance_new', {'id': dossier.id})}}">Ajouter</a>
										</li>
									</ul>
								</div>
							</div>
						</div>
						<hr class="border border-danger border-2 opacity-50">
						{# <h1>Examens</h1> #}
						<div id="scrollContainer">
							<table class="table table-striped">
							<thead>
								<tr>
									{# <th>Id</th> #}
									<th>Date</th>
									<th>Type</th>
									<th>Resultat</th>
									{# <th>actions</th> #}
								</tr>
							</thead>
							<tbody>
								{% for examan in examens %}
									<tr>
										{# <td>{{ examan.id }}</td> #}
										<td>{{ examan.createdAt ? examan.createdAt|date('Y-m-d H:i:s') : '' }}</td>
										<td>{{ examan.type }}</td>
										<td>{{ examan.resultat }}</td>
										{# <td>
																					<a href="{{ path('app_examen_show', {'id': examan.id}) }}">show</a>
																					<a href="{{ path('app_examen_edit', {'id': examan.id}) }}">edit</a>
																				</td> #}
									</tr>
								{% else %}
									<tr>
										<td colspan="5">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
						</div>
					</div>
					<div class="col">
						<div class="row mt-2">
							<div class="col-9">
								<h2 class="mt-4">Rendez-vous Médicaux</h2>
							</div>
							<div
								class="col-2 mt-3 px-1 text-end">
								<div class="dropdown">
									<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></button>
									<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
										<li>
											<a class="dropdown-item" href="{{ path('app_ordonnance_new', {'id': dossier.id})}}">Ajouter</a>
										</li>
									</ul>
								</div>
							</div>
						</div>						
						<hr class="border border-warning border-2 opacity-50">
						<table class="table table-striped">
							<thead>
								<tr>
									{# <th>Id</th> #}
									<th>Date</th>
									<th>Motif</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for rdv in rdvs %}
									<tr>
										<td>{{ rdv.id }}</td>
										<td>{{ rdv.date ? rdv.date|date('Y-m-d') : '' }}</td>
										<td>{{ rdv.motif }}</td>
										<td>
											<a href="{{ path('app_rdv_show', {'id': rdv.id}) }}">show</a>
											<a href="{{ path('app_rdv_edit', {'id': rdv.id}) }}">edit</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="4">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>

				<div class="d-grid gap-2 col-6 mx-auto">
					<a class="btn btn-warning" style="font-size: 25px" href="{{ path('app_medecin_dossier_index') }}">Retour</a>
				</div>
			</div>
		</div>
	</div>


	{# <a href="{{ path('app_medecin_dossier_edit', {'id': dossier.id}) }}">edit</a> #}

	{# {{ include('medecin_dossier/_delete_form.html.twig') }} #}
{% endblock %}

