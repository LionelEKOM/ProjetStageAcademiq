{% extends 'base.html.twig' %}

{% block title %}Dossier index
{% endblock %}

{% block body %}

	<div class="wrapper">
		{% include '_partials/asidebarmed.html.twig' %}
		<div class="main">
			{% include '_partials/_navbar.html.twig' %}
			<div class="container">
				{% for type, messages in app.flashes() %}
						<div class="">
							{% for message in messages %}
								<div class=" text-center alert alert-{{ type }}" role="alert">
									{{ message }}
								</div>
							{% endfor %}
						</div>
					{% endfor %}
				<h1 class="mt-2">Dossiers Médicaux</h1>

				<table class="table">
					<thead>
						<tr>
							{# <th>Id</th> #}
							{# <th>Clinique</th> #}<th>
							Prénom
							</th><th>
							Nom
							</th><th>
							Age
							</th><th>
							Sexe
							</th><th>
							E-mail
							</th><th>
							Adresse
							</th><th>
							Téléphone
							</th><th>
							Profession
							</th>
							{# <th>Taille</th> #}
							{# <th>Poids</th> #}
                            {# <th>Date création</th> #}
                			<th>
							Actions
						</th>
					</tr>
					</thead>
						<tbody>
							{% for dossier in dossiers %}
								<tr>
								{# <td>{{ dossier.id }}</td> #}
								{# <td>{{ dossier.clinique }}</td> #}<td>
								{{ dossier.firstname }}
								</td><td>
								{{ dossier.lastname }}
								</td>
									<td>{{ dossier.age }}
								ans
								</td><td>
								{{ dossier.sexe }}
								</td><td>
								{{ dossier.email }}
								</td><td>
								{{ dossier.adresse }}
								</td><td>
								{{ dossier.phone }}
								</td><td>
								{{ dossier.profession }}
								</td>
								{# <td>{{ dossier.taille }}</td> #}
								{# <td>{{ dossier.poids }}</td> #}
                                {# <td>
								{{ dossier.createdAt ? dossier.createdAt|date('Y-m-d')}}
								</td> #}
									<td>
										<a class="px-2" href="{{ path('app_medecin_dossier_show', {'id': dossier.id}) }}">
                                            <i class="fa-brands fa-readme px-2"></i>
                                        </a>
									{# <a href="{{ path('app_medecin_dossier_edit', {'id': dossier.id}) }}">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a> #}
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="14">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				{# <a href="{{ path('app_medecin_dossier_new') }}">Ajouter</a> #}
			</div>
		</div>
	</div>

{% endblock %}
